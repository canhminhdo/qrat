prog SECRET_SHARING is
var q0, q1, q2, q3 : qubit;
init
    q0 := random;
    q1 := |0>;
    q2 := |0>;
    q3 := |0>;
begin
    H[q1];
    CX[q1, q2];
    CX[q0, q1];
    H[q0];
    CX[q2, q3];
    H[q2];
    if M[q1] = 1 then X[q3]; else skip; fi;
    if M[q0] = 1 then Z[q3]; else skip; fi;
    if M[q2] = 1 then Z[q3]; else skip; fi;
end

psearch in SECRET_SHARING with =>! such that P(q3, init[q0]) .

quit .